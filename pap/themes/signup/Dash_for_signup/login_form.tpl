<!-- login_form -->
<div class="c1_Wrapper c1_WrapperContact">
	<h1 class="c1_single">{widget id="panelName"}</h1>
	<div class="c1_WrapperContainer">
		<div class="c1_WindowIn">
			<div class="WindowHeaderTitle">##Login##</div>
			<div class="WindowContent">
			{widget id="username"}
			{widget id="password"}
			{widget id="language"}
			<div class="CheckBoxContainer">{widget id="rememberMeInput"} {widget id="rememberMeLabel"}</div>
			<div class="clear"></div>
			{widget id="FormMessage"}
			<div class="clear"></div>
			{widget id="LoginButton"}
			{widget id="ForgottenPasswordLink"}
			<div class="clear"></div>
			</div>
		</div>
		{widget id="login_annotation" class="c1_Annotation"}
	</div>
</div>
