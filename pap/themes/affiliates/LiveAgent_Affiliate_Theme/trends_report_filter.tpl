<!-- trends_report_filter -->
    
<div class="TrendReportsFilter">
    <div class="FilterRow">
        <div class="FilterLegend">##Channel##</div>
        {widget id="channel"}
        <div class="clear"></div>
    </div>

	<div class="FilterRow">
		<div class="FilterLegend">##Campaign##</div>
		{widget id="campaignid"}
		<div class="clear"></div>
	</div> 
     
    <div class="FilterRow">
        <div class="FilterLegend">##Banner##</div>
        {widget id="bannerid"}
        <div class="clear"></div>
    </div>

	<div class="FilterRow">
		<div class="FilterLegend">##DestinationURL##</div>
		{widget id="destinationurl"}
		<div class="clear"></div>
	</div>

	<div class="FilterRow">
		<div class="FilterLegend">##Status##</div>
                {widget id="rstatus"}
		<div class="clear"></div>
	</div>
       	{widget id="additionalFilters"}

</div>
<div style="clear: both;"></div>
   
