<!--    banner_widget_stats   -->
<table width="100%" class="BannerTableStats" cellpadding="2" cellspacing="2">
  <tr >
<td colspan="8" align="center" class="white" > ##Banner stats## {widget id="forChannel" class="Inline"}</td>
</tr><tr>

<td width="16%" class="TextAlignLeft">##Impressions:## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="impsLabel" class="Inline"}</td>

<td width="16%" class="TextAlignLeft">##Clicks:## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="clicksLabel" class="Inline"}</td>

<td width="16%" class="TextAlignLeft">##CTR:## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="ctrLabel" class="Inline"}</td>

</tr><tr>

<td width="16%" class="TextAlignLeft">##Sales:## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="salesLabel" class="Inline"}</td>

<td width="16%" class="TextAlignLeft">##Commissions:## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="commLabel" class="Inline"}</td>

<td width="16%" class="TextAlignLeft" nowrap>##SCR (sales / clicks):## </td>
<td style="color: #000000" width="16%" class="TextAlignRight">{widget id="scrLabel" class="Inline"}</td>

</tr>
</table>
