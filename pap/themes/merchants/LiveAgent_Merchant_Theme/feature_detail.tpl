<!-- feature_detail -->
<div class="FeatureDetailBorder">
	<div class="FeatureDetailInnerShadow">
<table class="PluginDetail" width="100%">
    <tr>
        <td width="75px"><div class="FeatureLogo"></div></td>
        <td class="PluginData">
            <div class="PluginHeader">
                {widget id="Name" class="PluginName"}
                <div class="FloatRight" style="width: 200px;">
                {widget id="Usage" class="PluginUsage"}
                {widget id="Price" class="PluginPrice"}
                </div>
                <div class="clear"></div>
            </div>
            {widget id="Description" class="PluginDescription"}
        </td>
        <td width="100px" class="PluginMoreInfo">{widget id="Help"}{widget id="Settings"}</td>
        <td width="150px" class="PluginActions">{widget id="Actions"}<div class="clear"></div></td>
    </tr>
</table>
	</div>
</div>
