<!-- pay_affiliates_filter -->
<div class="PayAffiliatesFilter">
	<div class="FilterRow">       
		<div class="FilterLegend">##Show affiliates##</div> 
				{widget id="reachedMinPayout"}
		<div class="clear"></div>
	</div>
 
	<div class="FilterRow">       
		<div class="FilterLegend">##Date created##</div> 
				{widget id="dateinserted"}
		<div class="clear"></div>
	</div>
				
	<div class="FilterRow">       
		<div class="FilterLegend">##Affiliate##</div> 
                {widget id="rstatus"}
		<div class="clear"></div>
	</div>

    <div class="FilterRow">
        <div class="FilterLegend">##Campaign##</div> 
                {widget id="campaignid"}
        <div class="clear"></div>
    </div>

    <div class="FilterRow">
        <div class="FilterLegend">##Statistics payout status##</div>
        {widget id="payoutstatus"}
        <div class="clear"></div>
    </div>

    <div class="FilterRow">
        <div class="FilterLegend">##Transaction data##</div>
                {widget id="transactionData"}
        <div class="clear"></div>
    </div>

</div>

<div style="clear: both;"></div>
   
