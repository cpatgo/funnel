<!-- visits_sales_logs_filter -->

<div class="LogFilter">
    <fieldset class="Filter">
        <legend>##Date of visit##</legend>
        <div class="Resize">
            {widget id="datevisit"}
        </div>
    </fieldset>

    <fieldset class="Filter">
        <legend>##Track method##</legend>
        <div class="Resize">
            {widget id="trackmethod"}
        </div>
    </fieldset>

    <fieldset class="Filter">          
        <legend>##Status##</legend>
        <div class="Resize">
            {widget id="rstatus"}
        </div>
    </fieldset>

    <fieldset class="Filter">
        <legend>##Custom##</legend>
        <div class="Resize">
            {widget id="custom"}
        </div>
    </fieldset>
</div>

<div style="clear: both;"></div>
